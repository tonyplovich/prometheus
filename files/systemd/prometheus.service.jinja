[Unit]
Description=Prometheus Monitoring Server
Documentation=https://prometheus.io/docs/introduction/overview/
After=network.target

[Service]
User=prometheus
ExecStart={{ base_dir }}/prometheus/prometheus --config.file={{ base_dir }}/prometheus/config.yml --web.listen-address={{ listen_address}}:{{ port }} --storage.tsdb.path={{ base_dir }}/data/ {{ options }}

[Install]
WantedBy=multi-user.target
