[Unit]
Description=Prometheus Alertmanager
Documentation=https://github.com/prometheus/alertmanager/
After=network.target

[Service]
User=prometheus
ExecStart={{ base_dir}}/alertmanager/alertmanager --storage.path={{ base_dir}}/alertmanager_data/ --config.file={{ base_dir}}/alertmanager/config.yml {{ options }}

[Install]
WantedBy=multi-user.target
